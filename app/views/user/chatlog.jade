extends index
block rightContent
  .table-responsive
    table.table.table-bordered
      tr.success
        td(width='151px') 时间
        td(width='120px') 用户名
        td(width='auto') 消息
        td(width='50') 来源
        td(width='110px') IP地址
        td(width='80px') X
        td(width='50px') Y
        td(width='80px') Z
      each log in logs
        tr
          td #{ time2string(log.meta.createAt) }
          td
            if log.user
              | #{ log.user.username }
          td #{ log.message }
          td #{ log.source || 'game' }
          td #{ log.hostaddress }
          td #{ Math.round(log.meta.location.x*10)/10 }
          td #{ Math.round(log.meta.location.y*10)/10 }
          td #{ Math.round(log.meta.location.z*10)/10 }
    include ../include/_paginate
  script.
    $('#nav_user_chatlog').addClass('active');
